@using System.Threading.Tasks
@using TaskManagerUI.Infrastructure.Authorization

@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Account" asp-action="LogOff" method="get" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#">Hello, @User.GetUserName()!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="@(ViewBag.Title == "Login" ? "active" : "")"><a asp-area="" asp-controller="Account" asp-action="Login">Log In</a></li>
        <li class="@(ViewBag.Title == "Register" ? "active" : "")"><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
    </ul>
}